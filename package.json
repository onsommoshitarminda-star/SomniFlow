    "nodemailer": "^6.10.1",
    "postcss": "^8.5.6",
    "prisma": "^6.15.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "speakeasy": "^2.0.0",
    "tailwindcss": "^3.4.17",
