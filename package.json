    "@simplewebauthn/types": "^12.0.0",
    "@tanstack/react-query": "^5.83.0",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/three": "^0.178.1",
    "@web3auth/base": "^9.7.0",
    "@web3auth/web3auth-wagmi-connector": "^7.0.0",
