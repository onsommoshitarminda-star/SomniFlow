{
  "name": "oneclick-defi",
  "version": "1.0.0",
  "description": "Email to DeFi in One Click - OKX Hackathon Project",
  "scripts": {
    "dev": "next dev -p 3500 -H 0.0.0.0",
    "build": "next build",
    "start": "next start -p 3500",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0",
    "clean": "rm -rf .next out",
    "analyze": "ANALYZE=true next build",
    "contracts:compile": "cd contracts && npm run compile",
    "contracts:deploy": "cd contracts && npm run deploy",
    "contracts:deploy:mainnet": "cd contracts && npm run deploy:mainnet",
    "contracts:deploy:verify": "cd contracts && npm run deploy:verify",
    "contracts:deploy:verify:mainnet": "cd contracts && npm run deploy:verify:mainnet",
    "contracts:test": "cd contracts && npm test"
  },
  "keywords": [
    "defi",
    "web3",
    "passkey",
    "okx",
    "dex"
  ],
  "author": "",
  "license": "MIT",
